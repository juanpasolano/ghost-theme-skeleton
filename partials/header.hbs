<div role='banner' class="header_rocky">
	{{#if @blog.logo}}<a class="logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
	<h1 class="blogtitle">
	<a title="{{@blog.title}}" href='{{@blog.url}}'>
	{{{@blog.title}}}
	</a>
	</h1>
	<p class="blogdescription">
	<a title="{{@blog.title}}" href='{{@blog.url}}'>
	{{@blog.description}}
	</a>
	</p>
</div>